<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <view class="inp">

            <view class="weui-cell  weui-cell_vcode">
              <view class="weui-cell__hd">
                <view class="weui-label">手机号</view>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入手机号" />
              </view>
            </view>
          </view>

          支出
        </view>
        <view hidden="{{activeIndex!= 1}}">
          <view class="weui-cell">
            <view class="weui-cell__hd"  >
             <image src="{{item.hoverUrl}}" data-index='{{index}}'></image>
              <view class="weui-label">chuxing</view>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请输入金额" />
            </view>
          </view>

          <view class="simg" >
            <view class='test' wx:for='{{imgList}}' wx:key='img' bindtap='chooseThis' data-index='{{index}}'>
              <image src='{{imgHoverIndex == index ?item.hoverUrl:item.url}}'></image> 
                  <text class="box-text" style="color:{{imgHoverIndex == index ?item.hocolor:item.tecolor}}">{{item.title}}</text> 
            </view>
          </view>
        </view>
      </view>


    </view>
  </view>
</view>